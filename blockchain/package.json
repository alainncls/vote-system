{
  "name": "vote-system-smart-contracts",
  "version": "1.0.0",
  "description": "DApp to create elections and vote - Smart contracts part",
  "repository": "git@github.com:alainncls/vote-system.git",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "truffle build",
    "postbuild": "npm run types",
    "migrate": "truffle migrate --reset",
    "postmigrate": "npm run types",
    "types": "npm run types:build && npm run types:move",
    "types:build": "npx typechain --target ethers-v5 build/contracts/*",
    "types:move": "rm -rf ../www/src/config/types && mv types ../www/src/config",
    "test": "truffle test"
  },
  "author": "Alain Nicolas",
  "license": "ISC",
  "devDependencies": {
    "coveralls": "^3.1.1",
    "solidity-coverage": "0.8.4",
    "@typechain/ethers-v5": "^10.0.0",
    "chai": "^4.3.6",
    "truffle": "^5.11.5",
    "truffle-assertions": "^0.9.2",
    "typechain": "^8.0.0"
  }
}
